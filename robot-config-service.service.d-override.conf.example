[Service]
# API credentials for basic authentication
Environment="API_USERNAME=your_username_here"
Environment="API_PASSWORD=your_password_here"

# Short URL that redirects to the current OpenShift event cluster (e.g. https://short.domain/abc-123
# redirects to https://web-hub-controller.apps..../control/eventId). Must be a full URL including https://
Environment="REDIRECT_URL=https://your-short-redirect.example.com/path"

# Optional: Override default ansible playbook path if needed
# Environment="ANSIBLE_PLAYBOOK_PATH=/opt/robot-config/ansible/configure-skupper.yml"

# Optional: Override log level (default: INFO)
# Environment="LOG_LEVEL=INFO"

# Optional: Tunnel check after reboot - initial delay (s), retries, interval (s). Playbook only if all checks say "down".
# Environment="TUNNEL_CHECK_INITIAL_DELAY=45"
# Environment="TUNNEL_CHECK_RETRIES=3"
# Environment="TUNNEL_CHECK_INTERVAL=30"

# Optional: Set to 1 only if REDIRECT_URL is already the full cluster/eventId URL (no redirect to follow).
# Normally leave unset: REDIRECT_URL is the short link that redirects to the cluster.
# Environment="REDIRECT_URL_IS_CLUSTER=1"

# Optional: Redirect - retries and delay (s) when following redirect URL (transient connection failures).
# Environment="REDIRECT_RETRIES=3"
# Environment="REDIRECT_RETRY_DELAY=10"
